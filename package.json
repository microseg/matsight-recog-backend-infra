{
  "name": "infra",
  "version": "0.1.0",
  "bin": {
    "infra": "bin/infra.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "connect-dev": "node scripts/connect-dev.js",
    "connect-dev-ssh": "node scripts/connect-dev.js ssh",
    "connect-dev-ssm": "node scripts/connect-dev.js ssm",
    "update-ssh": "node scripts/update-ssh-access.js",
    "add-ssh": "node scripts/update-ssh-access.js add",
    "remove-ssh": "node scripts/update-ssh-access.js remove",
    "user-create": "node scripts/user-manager.js create",
    "user-list": "node scripts/user-manager.js list",
    "user-delete": "node scripts/user-manager.js delete",
    "connect-user": "node scripts/connect-user.js",
    "users": "node scripts/connect-user.js list",
    "demo": "node scripts/demo-users.js",
    "deploy-prod": "node scripts/deploy-to-prod.js",
    "pipeline-status": "aws codepipeline get-pipeline-state --name MatsightDeployPipeline",
    "pipeline-start": "aws codepipeline start-pipeline-execution --name MatsightDeployPipeline",
    "pipeline-list": "aws codepipeline list-pipeline-executions --pipeline-name MatsightDeployPipeline"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1027.0",
    "cdk-dia": "^0.12.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.211.0",
    "constructs": "^10.4.2",
    "@aws-sdk/client-ec2": "^3.0.0",
    "@aws-sdk/client-sts": "^3.0.0",
    "@aws-sdk/client-iam": "^3.0.0"
  }
}
